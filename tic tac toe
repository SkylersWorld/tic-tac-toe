<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tic-Tac-Toe</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Use Inter font -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap');
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f4f8; /* Light background */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1rem;
        }

        /* Custom Styles for Grid */
        #game-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: repeat(3, 1fr);
            width: 100%;
            max-width: 400px; /* Limit size on large screens */
            aspect-ratio: 1 / 1;
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            border-radius: 1rem;
            overflow: hidden;
            background-color: #ffffff;
        }

        .cell {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 4rem; /* Large symbols */
            font-weight: 900;
            cursor: pointer;
            border: 2px solid #cbd5e1; /* Light border between cells */
            transition: background-color 0.15s ease-out, transform 0.1s;
            user-select: none;
        }

        .cell:hover:not(.x):not(.o) {
            background-color: #f7fafc;
        }

        /* Remove borders for middle cells to create the classic 3x3 look */
        .cell:nth-child(3n) { border-right: none; }
        .cell:nth-child(3n + 1) { border-left: none; }
        .cell:nth-child(n):nth-child(-n + 3) { border-top: none; }
        .cell:nth-child(n):nth-child(n + 7) { border-bottom: none; }

        .x {
            color: #ef4444; /* Red for X */
            animation: pop 0.3s ease-out;
        }

        .o {
            color: #3b82f6; /* Blue for O */
            animation: pop 0.3s ease-out;
        }

        .win {
            background-color: #10b981; /* Green for win line */
            color: white;
        }

        @keyframes pop {
            0% { transform: scale(0.5); opacity: 0; }
            80% { transform: scale(1.1); opacity: 1; }
            100% { transform: scale(1); }
        }
    </style>
</head>
<body class="p-4">

    <div class="w-full max-w-lg flex flex-col items-center">
        <h1 class="text-5xl font-extrabold text-gray-800 mb-6 text-center tracking-tight">Tic-Tac-Toe</h1>
        
        <!-- Status Message Box -->
        <div id="status-message" class="w-full text-center p-4 mb-8 text-xl font-semibold rounded-lg shadow-md transition-all duration-300 bg-white border-b-4 border-indigo-500 text-gray-700">
            Player X's turn
        </div>

        <!-- Game Grid -->
        <div id="game-grid" class="mb-8">
            <!-- 9 cells will be generated here -->
        </div>

        <!-- Control Button -->
        <button id="reset-btn" onclick="resetGame()" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-xl transition shadow-lg hover:shadow-xl active:scale-[0.98] text-lg">
            Restart Game
        </button>

    </div>

    <script>
        // --- Core Game State ---
        const board = new Array(9).fill(''); // The game board: ['', 'X', 'O', ...]
        let currentPlayer = 'X';
        let gameActive = true;
        const statusMessage = document.getElementById('status-message');
        const gameGrid = document.getElementById('game-grid');

        // Winning combinations (indices of the board array)
        const winningConditions = [
            [0, 1, 2], // Row 1
            [3, 4, 5], // Row 2
            [6, 7, 8], // Row 3
            [0, 3, 6], // Column 1
            [1, 4, 7], // Column 2
            [2, 5, 8], // Column 3
            [0, 4, 8], // Diagonal 1
            [2, 4, 6]  // Diagonal 2
        ];

        // --- Game Logic ---

        function handleCellClick(clickedCell, clickedCellIndex) {
            // Guard clauses: Don't allow clicks if cell is taken or game is over
            if (board[clickedCellIndex] !== '' || !gameActive) {
                return;
            }

            // Update state
            board[clickedCellIndex] = currentPlayer;
            clickedCell.textContent = currentPlayer;
            clickedCell.classList.add(currentPlayer.toLowerCase());

            // Check for game end
            const result = checkWinner();
            if (result === 'win') {
                gameActive = false;
                updateStatus(`Player ${currentPlayer} Wins!`, 'success');
                highlightWin(winningConditions.find(condition => 
                    board[condition[0]] === currentPlayer && 
                    board[condition[1]] === currentPlayer && 
                    board[condition[2]] === currentPlayer
                ));
            } else if (result === 'draw') {
                gameActive = false;
                updateStatus("It's a Draw!", 'warning');
            } else {
                // Continue game
                currentPlayer = currentPlayer === 'X' ? 'O' : 'X';
                updateStatus(`Player ${currentPlayer}'s turn`, 'info');
            }
        }

        function checkWinner() {
            let roundWon = false;
            let winCondition = null;
            for (let i = 0; i < winningConditions.length; i++) {
                const condition = winningConditions[i];
                const a = board[condition[0]];
                const b = board[condition[1]];
                const c = board[condition[2]];

                if (a === '' || b === '' || c === '') {
                    continue;
                }
                if (a === b && b === c) {
                    roundWon = true;
                    winCondition = condition;
                    break;
                }
            }

            if (roundWon) {
                return 'win';
            }

            // Check for Draw (if no winner and no empty cells)
            if (!board.includes('')) {
                return 'draw';
            }

            return 'continue';
        }
        
        function highlightWin(condition) {
            if (condition) {
                condition.forEach(index => {
                    document.querySelector(`[data-index="${index}"]`).classList.add('win');
                });
            }
        }

        function updateStatus(message, type) {
            statusMessage.textContent = message;
            statusMessage.classList.remove('border-indigo-500', 'border-green-500', 'border-yellow-500', 'text-gray-700', 'text-green-800', 'text-yellow-800');

            if (type === 'success') {
                statusMessage.classList.add('border-green-500', 'text-green-800');
            } else if (type === 'warning') {
                statusMessage.classList.add('border-yellow-500', 'text-yellow-800');
            } else { // info / default
                statusMessage.classList.add('border-indigo-500', 'text-gray-700');
            }
        }

        function resetGame() {
            for(let i = 0; i < 9; i++) {
                board[i] = '';
            }
            currentPlayer = 'X';
            gameActive = true;
            
            // Reset UI
            gameGrid.querySelectorAll('.cell').forEach(cell => {
                cell.textContent = '';
                cell.classList.remove('x', 'o', 'win');
            });

            updateStatus(`Player X's turn`, 'info');
        }

        // --- Initialization ---

        function setupBoard() {
            for (let i = 0; i < 9; i++) {
                const cell = document.createElement('div');
                cell.className = 'cell';
                cell.dataset.index = i;
                cell.onclick = () => handleCellClick(cell, i);
                gameGrid.appendChild(cell);
            }
            updateStatus(`Player X's turn`, 'info');
        }

        window.onload = setupBoard;

    </script>
</body>
</html>
